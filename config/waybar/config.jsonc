    },

    "custom/clock": {
        "format": "{}",
        "return-type": "json",
        "exec": "/home/saaranshk/.config/waybar/scripts/skalendar.py",
        "interval": 60,
        "tooltip": true,
        "on-click": "/usr/bin/merkuro-calendar",
        "on-click-right": "/home/saaranshk/.config/waybar/scripts/skalendar.sh"
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",//{format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî",//{format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
