    "custom/cpu": {
        "exec": "~/.config/waybar/scripts/cpu_btop_json.sh cpu",
        "interval": 2,
        "return-type": "json",
        "tooltip": true,
        // Optional: override thresholds/icons without editing the script
        "exec-if": "true",
        "env": {
        "WB_CPU_THRESH": "35,70",
        "WB_CPU_ICONS": "Ôãõ,Ôãõ,Ôãõ",      // change if you prefer other glyphs
        "WB_CPU_TOP_N": "5"
