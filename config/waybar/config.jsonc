    "group/system-tools": {
        "orientation": "horizontal",
        "modules": [
            "custom/system-icon",
            "network",
            "power-profiles-daemon",
            "custom/cpu",
            "custom/memory",
            "custom/temp",
            "idle_inhibitor"
            //"keyboard-state"
        ],
        "rotate": 0,
        "drawer": {
            "transition-duration": 100,      // ms
            "children-class": "syschild",    // optional CSS hook
            "click-to-reveal": false,        // false = reveal on hover; true = click
            "transition-left-to-right": false // slide direction
        }
    },

    "group/function-tools":{
        "orientation":"horizontal",
        "modules":[
            "custom/function-icon",
            "custom/warp",
            "custom/bluetooth",
            "pulseaudio",
            "battery",
            "backlight",
            "custom/git"
        ],
        "rotate": 0,
        "drawer":{
            "transition-duration": 100,
            "children-class":"syschild",
            "click-to-reveal": false,
            "transition-left-to-right": false
        }
